.loading-fixed {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255,255,255,0.5)
}

.loading-image {
  width: 60px;
  height: 60px;
  background: 100% 100%;
}